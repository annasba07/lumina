<Window x:Class="SuperWhisperWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Title="SuperWhisper"
        Width="800" Height="600"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource AppBackgroundBrush}"
        ui:WindowHelper.UseModernWindowStyle="True">

    <Grid Margin="0,40,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header Section -->
        <Border Grid.Row="0" Style="{StaticResource ModernCard}">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- App Icon and Title -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <ui:FontIcon Glyph="&#xE720;" FontSize="24" Foreground="{StaticResource AccentBrush}" Margin="0,0,12,0"/>
                        <TextBlock Text="SuperWhisper" FontSize="24" FontWeight="Bold" 
                                 Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Status -->
                    <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <StackPanel x:Name="StatusPanel" Orientation="Horizontal" HorizontalAlignment="Center">
                            <ui:FontIcon x:Name="StatusIcon" Glyph="&#xE894;" FontSize="16" 
                                       Foreground="#4CAF50" Margin="0,0,8,0"/>
                            <TextBlock x:Name="StatusText" Text="Ready - Press Ctrl+Space to start recording" 
                                     FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                        
                        <!-- Audio Level Indicator -->
                        <ui:ProgressBar x:Name="AudioLevelBar" Value="0" Maximum="1" Height="4" 
                                      Margin="0,8,0,0" Width="200" 
                                      Foreground="{StaticResource AccentBrush}"
                                      Background="#404040"/>
                    </StackPanel>
                    
                    <!-- Engine Status -->
                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                        <TextBlock Text="Engine Status" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" 
                                 HorizontalAlignment="Center"/>
                        <TextBlock x:Name="EngineStatusText" Text="Whisper.net" FontSize="12" 
                                 Foreground="{StaticResource AccentBrush}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <Border Grid.Row="1" Style="{StaticResource ModernCard}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Results Header -->
                <Grid Grid.Row="0" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <ui:FontIcon Glyph="&#xE8BD;" FontSize="16" Foreground="{StaticResource AccentBrush}" Margin="0,0,8,0"/>
                        <TextBlock Text="Transcription Results" FontSize="16" FontWeight="SemiBold" 
                                 Foreground="{StaticResource TextPrimaryBrush}"/>
                    </StackPanel>
                    
                    <TextBlock Grid.Column="2" x:Name="WordCountText" Text="0 words" FontSize="12" 
                             Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                </Grid>
                
                <!-- Results Text Area -->
                <Border Grid.Row="1" Background="#2D2D30" CornerRadius="8" BorderThickness="1" BorderBrush="#404040">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <TextBox x:Name="ResultsTextBox" 
                               Background="Transparent" 
                               BorderThickness="0"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               FontSize="14"
                               FontFamily="Segoe UI"
                               TextWrapping="Wrap"
                               AcceptsReturn="True"
                               IsReadOnly="False"
                               Margin="16"
                               MinHeight="200"
                               VerticalAlignment="Stretch"/>
                    </ScrollViewer>
                </Border>
                
                <!-- Action Buttons -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                    <Button x:Name="CopyButton" Style="{StaticResource ModernButton}" 
                          Click="CopyButton_Click" IsEnabled="False" Margin="0,0,12,0">
                        <StackPanel Orientation="Horizontal">
                            <ui:FontIcon Glyph="&#xE8C8;" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Text="Copy"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="ClearButton" Style="{StaticResource ModernButton}" 
                          Background="#666666" Click="ClearButton_Click" IsEnabled="False">
                        <StackPanel Orientation="Horizontal">
                            <ui:FontIcon Glyph="&#xE74D;" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Text="Clear"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#2D2D30" CornerRadius="8" BorderThickness="1" BorderBrush="#404040" 
                Margin="8" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Keyboard Shortcuts -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Background="#404040" CornerRadius="4" Padding="6,2" Margin="0,0,8,0">
                        <TextBlock Text="Ctrl+Space" FontSize="11" Foreground="{StaticResource TextPrimaryBrush}" FontWeight="Bold"/>
                    </Border>
                    <TextBlock Text="Toggle Recording" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                    
                    <Rectangle Width="1" Height="16" Fill="#404040" Margin="16,0"/>
                    
                    <Border Background="#404040" CornerRadius="4" Padding="6,2" Margin="0,0,8,0">
                        <TextBlock Text="Ctrl+C" FontSize="11" Foreground="{StaticResource TextPrimaryBrush}" FontWeight="Bold"/>
                    </Border>
                    <TextBlock Text="Copy Text" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- App Version -->
                <TextBlock Grid.Column="1" Text="v1.0.0" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" 
                         VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>