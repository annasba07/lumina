<Window x:Class="SuperWhisperWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Title="Lumina"
        Width="700" Height="600"
        MinWidth="500" MinHeight="400"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource AppBackgroundBrush}"
        ui:WindowHelper.UseModernWindowStyle="False">

    <Grid>
        <!-- Main Content -->
        <Border Background="{StaticResource CardBackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Margin="32"
                Padding="32">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" Margin="0,0,0,32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                              Text="Lumina"
                              FontSize="20"
                              FontWeight="SemiBold"
                              Foreground="{StaticResource TextPrimaryBrush}"/>

                    <StackPanel Grid.Column="1"
                               Orientation="Horizontal">
                        <Ellipse x:Name="StatusIndicator"
                                Width="8"
                                Height="8"
                                Fill="{StaticResource SuccessBrush}"
                                Margin="0,0,8,0"/>
                        <TextBlock x:Name="StatusText"
                                  Text="Ready"
                                  FontSize="14"
                                  Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Grid>

                <!-- Recording Hint -->
                <TextBlock Grid.Row="1"
                          x:Name="RecordingHintText"
                          Text="Press Ctrl+Space to start recording"
                          FontSize="14"
                          Foreground="{StaticResource TextSecondaryBrush}"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,24"/>

                <!-- Transcription Area -->
                <Border Grid.Row="2"
                        Background="{StaticResource CardBackgroundBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Margin="0,0,0,20">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Disabled">
                        <TextBox x:Name="ResultsTextBox"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="{StaticResource TextPrimaryBrush}"
                                FontSize="14"
                                FontFamily="Segoe UI"
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                IsReadOnly="False"
                                Padding="20"
                                MinHeight="200"
                                VerticalAlignment="Stretch"
                                Text="Your transcriptions will appear here..."/>
                    </ScrollViewer>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="3"
                           Orientation="Horizontal"
                           HorizontalAlignment="Right">
                    <Button x:Name="ClearButton"
                           Style="{StaticResource SecondaryButton}"
                           Click="ClearButton_Click"
                           IsEnabled="False"
                           Margin="0,0,12,0"
                           Padding="12,6">
                        <TextBlock Text="Clear"/>
                    </Button>

                    <Button x:Name="CopyButton"
                           Style="{StaticResource MinimalButton}"
                           Click="CopyButton_Click"
                           IsEnabled="False"
                           Padding="12,6">
                        <TextBlock Text="Copy Text"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Toast Notification (Hidden by default) -->
        <Border x:Name="ToastNotification"
                Background="#191919"
                CornerRadius="8"
                Padding="10,8"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,20,0,0"
                Visibility="Collapsed">
            <Border.Effect>
                <DropShadowEffect BlurRadius="12" ShadowDepth="4" Opacity="0.15" Color="#000000"/>
            </Border.Effect>

            <StackPanel Orientation="Horizontal">
                <Ellipse x:Name="ToastIndicator"
                        Width="8"
                        Height="8"
                        Fill="{StaticResource ErrorBrush}"
                        Margin="0,0,12,0">
                    <Ellipse.RenderTransform>
                        <ScaleTransform x:Name="ToastPulseTransform"/>
                    </Ellipse.RenderTransform>
                </Ellipse>

                <TextBlock x:Name="ToastText"
                          Text="Recording"
                          Foreground="White"
                          FontSize="13"
                          FontWeight="Medium"
                          Margin="0,0,12,0"/>

                <TextBlock x:Name="ToastTime"
                          Text="00:03"
                          Foreground="White"
                          FontSize="13"
                          FontFamily="Consolas, 'Courier New', monospace"
                          Opacity="0.8"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>