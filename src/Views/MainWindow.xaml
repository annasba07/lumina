<Window x:Class="SuperWhisperWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Title="Lumina"
        Width="440" Height="600"
        MinWidth="380" MinHeight="500"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="CanResize">

    <Border x:Name="WindowBorder"
            CornerRadius="12"
            Background="{DynamicResource BackgroundBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.12" Color="#000000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="48"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Grid Grid.Row="0" Background="Transparent" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- App Icon and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="✨" FontSize="16" Margin="0,0,8,0"/>
                    <TextBlock Text="Lumina"
                              FontSize="14"
                              FontWeight="SemiBold"
                              Foreground="#111827"
                              VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Window Controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,0,4,0">
                    <Button x:Name="ThemeToggleButton"
                            Width="46" Height="32"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="ThemeToggleButton_Click"
                            ToolTip="Toggle Dark Mode"
                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                        <TextBlock x:Name="ThemeIcon" Text="&#xE793;" FontFamily="Segoe MDL2 Assets" FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </Button>
                    <Button x:Name="MinimizeButton"
                            Width="46" Height="32"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="MinimizeButton_Click"
                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                        <TextBlock Text="&#xE921;" FontFamily="Segoe MDL2 Assets" FontSize="10" Foreground="#6B7280"/>
                    </Button>
                    <Button x:Name="CloseButton"
                            Width="46" Height="32"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="CloseButton_Click"
                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                        <Button.Resources>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#EF4444"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Resources>
                        <TextBlock Text="&#xE8BB;" FontFamily="Segoe MDL2 Assets" FontSize="10" Foreground="#6B7280"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Main Content Area -->
            <Grid Grid.Row="1" Margin="24,8,24,24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Welcome Section -->
                <StackPanel Grid.Row="0" Margin="0,0,0,24">
                    <TextBlock Text="Good evening! 👋"
                              FontSize="28"
                              FontWeight="SemiBold"
                              FontFamily="Segoe UI Variable Display"
                              Foreground="#111827"
                              Margin="0,0,0,8"/>
                    <TextBlock Text="What would you like to transcribe today?"
                              FontSize="15"
                              FontFamily="Segoe UI Variable Text"
                              Foreground="#6B7280"/>
                </StackPanel>

                <!-- Quick Actions (Copilot-style buttons) -->
                <WrapPanel Grid.Row="1" Margin="0,0,0,24">
                    <Border Background="#F9FAFB"
                           CornerRadius="20"
                           Padding="16,10"
                           Margin="0,0,8,8"
                           Cursor="Hand">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.04" Color="#000000"/>
                        </Border.Effect>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🎙️" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Voice Note" FontSize="14" Foreground="#374151"/>
                        </StackPanel>
                        <Border.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                       To="#F3F4F6" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                       To="#F9FAFB" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                    </Border>

                    <Border Background="#F9FAFB"
                           CornerRadius="20"
                           Padding="16,10"
                           Margin="0,0,8,8"
                           Cursor="Hand">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.04" Color="#000000"/>
                        </Border.Effect>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="💭" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Quick Memo" FontSize="14" Foreground="#374151"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#F9FAFB"
                           CornerRadius="20"
                           Padding="16,10"
                           Margin="0,0,8,8"
                           Cursor="Hand">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.04" Color="#000000"/>
                        </Border.Effect>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📝" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Meeting Notes" FontSize="14" Foreground="#374151"/>
                        </StackPanel>
                    </Border>
                </WrapPanel>

                <!-- Transcription Area -->
                <Grid Grid.Row="2">
                    <Border Background="#F9FAFB"
                            CornerRadius="12"
                            BorderBrush="#E5E7EB"
                            BorderThickness="1">
                        <Grid>
                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                                         HorizontalScrollBarVisibility="Disabled">
                                <TextBox x:Name="ResultsTextBox"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="#111827"
                                        FontSize="14"
                                        FontFamily="Segoe UI Variable Text"
                                        TextWrapping="Wrap"
                                        AcceptsReturn="True"
                                        IsReadOnly="False"
                                        Padding="16"
                                        MinHeight="200"
                                        VerticalAlignment="Stretch"/>
                            </ScrollViewer>

                            <!-- Empty State -->
                            <StackPanel x:Name="EmptyStatePanel"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center">
                                <Border Width="80" Height="80"
                                       CornerRadius="40"
                                       Background="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,16">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.08" Color="#000000"/>
                                    </Border.Effect>
                                    <TextBlock Text="🎙️"
                                              FontSize="36"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Your transcriptions will appear here"
                                          FontSize="14"
                                          FontFamily="Segoe UI Variable Text"
                                          Foreground="#6B7280"
                                          HorizontalAlignment="Center"/>
                                <Border Background="#3B82F6"
                                       CornerRadius="20"
                                       Padding="12,8"
                                       Margin="0,16,0,0"
                                       Cursor="Hand">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Press "
                                                  FontSize="13"
                                                  Foreground="White"
                                                  VerticalAlignment="Center"/>
                                        <Border Background="#2563EB"
                                               CornerRadius="4"
                                               Padding="6,2"
                                               Margin="2,0,2,0">
                                            <TextBlock Text="Alt+Shift+R"
                                                      FontSize="12"
                                                      FontWeight="SemiBold"
                                                      FontFamily="Cascadia Code, Consolas, monospace"
                                                      Foreground="White"/>
                                        </Border>
                                        <TextBlock x:Name="RecordingHintText"
                                                  Text=" to start"
                                                  FontSize="13"
                                                  Foreground="White"
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- Word Count -->
                            <Border x:Name="WordCountBorder"
                                   Background="White"
                                   CornerRadius="8"
                                   Padding="8,4"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Bottom"
                                   Margin="0,0,12,12"
                                   Visibility="Collapsed">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.08" Color="#000000"/>
                                </Border.Effect>
                                <TextBlock x:Name="WordCountText"
                                          Text="0 words"
                                          FontSize="12"
                                          Foreground="#6B7280"/>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Action Bar -->
                <Grid Grid.Row="3" Margin="0,16,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Status Badge -->
                    <Border Grid.Column="0"
                           x:Name="StatusBadge"
                           Background="#F0FDF4"
                           BorderBrush="#86EFAC"
                           BorderThickness="1"
                           CornerRadius="16"
                           Padding="10,5"
                           VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse x:Name="StatusIndicator"
                                    Width="6"
                                    Height="6"
                                    Fill="#10B981"
                                    Margin="0,0,6,0">
                                <Ellipse.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation From="0.3" To="1.0" Duration="0:0:2"
                                                               Storyboard.TargetProperty="Opacity"
                                                               AutoReverse="True"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Ellipse.Triggers>
                            </Ellipse>
                            <TextBlock x:Name="StatusText"
                                      Text="Ready"
                                      FontSize="12"
                                      FontWeight="Medium"
                                      Foreground="#059669"/>
                        </StackPanel>
                    </Border>

                    <!-- Audio Level (hidden by default) -->
                    <Border Grid.Column="0"
                           x:Name="AudioLevelBorder"
                           Visibility="Collapsed"
                           Background="#FEF3C7"
                           BorderBrush="#FCD34D"
                           BorderThickness="1"
                           CornerRadius="16"
                           Padding="10,5"
                           VerticalAlignment="Center">
                        <Canvas Width="60" Height="12">
                            <Rectangle x:Name="AudioLevel1" Width="3" Height="4" Fill="#F59E0B" Canvas.Left="0" Canvas.Top="4"/>
                            <Rectangle x:Name="AudioLevel2" Width="3" Height="6" Fill="#F59E0B" Canvas.Left="6" Canvas.Top="3"/>
                            <Rectangle x:Name="AudioLevel3" Width="3" Height="8" Fill="#F59E0B" Canvas.Left="12" Canvas.Top="2"/>
                            <Rectangle x:Name="AudioLevel4" Width="3" Height="10" Fill="#F59E0B" Canvas.Left="18" Canvas.Top="1"/>
                            <Rectangle x:Name="AudioLevel5" Width="3" Height="12" Fill="#F59E0B" Canvas.Left="24" Canvas.Top="0"/>
                            <Rectangle x:Name="AudioLevel6" Width="3" Height="10" Fill="#F59E0B" Canvas.Left="30" Canvas.Top="1"/>
                            <Rectangle x:Name="AudioLevel7" Width="3" Height="8" Fill="#F59E0B" Canvas.Left="36" Canvas.Top="2"/>
                            <Rectangle x:Name="AudioLevel8" Width="3" Height="6" Fill="#F59E0B" Canvas.Left="42" Canvas.Top="3"/>
                            <Rectangle x:Name="AudioLevel9" Width="3" Height="4" Fill="#F59E0B" Canvas.Left="48" Canvas.Top="4"/>
                            <Rectangle x:Name="AudioLevel10" Width="3" Height="2" Fill="#F59E0B" Canvas.Left="54" Canvas.Top="5"/>
                        </Canvas>
                    </Border>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Column="2"
                               Orientation="Horizontal"
                               HorizontalAlignment="Right">
                        <Button x:Name="ClearButton"
                               Background="White"
                               BorderBrush="#E5E7EB"
                               BorderThickness="1"
                               Click="ClearButton_Click"
                               IsEnabled="False"
                               Height="36"
                               Margin="0,0,8,0"
                               Padding="16,0"
                               Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="ButtonBorder"
                                           Background="{TemplateBinding Background}"
                                           BorderBrush="{TemplateBinding BorderBrush}"
                                           BorderThickness="{TemplateBinding BorderThickness}"
                                           CornerRadius="18">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="ButtonBorder" Property="Background" Value="#F9FAFB"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Opacity" Value="0.5"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE74D;"
                                          FontFamily="Segoe MDL2 Assets"
                                          FontSize="14"
                                          Margin="0,0,8,0"
                                          VerticalAlignment="Center"
                                          Foreground="#6B7280"/>
                                <TextBlock Text="Clear"
                                          FontSize="14"
                                          FontWeight="Medium"
                                          VerticalAlignment="Center"
                                          Foreground="#374151"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="ExportButton"
                               Background="White"
                               BorderBrush="#E5E7EB"
                               BorderThickness="1"
                               Click="ExportButton_Click"
                               IsEnabled="False"
                               Height="36"
                               Margin="0,0,8,0"
                               Padding="16,0"
                               Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="ButtonBorder"
                                           Background="{TemplateBinding Background}"
                                           BorderBrush="{TemplateBinding BorderBrush}"
                                           BorderThickness="{TemplateBinding BorderThickness}"
                                           CornerRadius="18">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="ButtonBorder" Property="Background" Value="#F9FAFB"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Opacity" Value="0.5"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xEDE1;"
                                          FontFamily="Segoe MDL2 Assets"
                                          FontSize="14"
                                          Margin="0,0,8,0"
                                          VerticalAlignment="Center"
                                          Foreground="#6B7280"/>
                                <TextBlock Text="Export"
                                          FontSize="14"
                                          FontWeight="Medium"
                                          VerticalAlignment="Center"
                                          Foreground="#374151"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="CopyButton"
                               Background="#3B82F6"
                               Click="CopyButton_Click"
                               IsEnabled="False"
                               Height="36"
                               Padding="16,0"
                               Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="ButtonBorder"
                                           Background="{TemplateBinding Background}"
                                           CornerRadius="18">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.1" Color="#3B82F6"/>
                                        </Border.Effect>
                                        <ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="ButtonBorder" Property="Background" Value="#2563EB"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Opacity" Value="0.5"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8C8;"
                                          FontFamily="Segoe MDL2 Assets"
                                          FontSize="14"
                                          Margin="0,0,8,0"
                                          VerticalAlignment="Center"
                                          Foreground="White"/>
                                <TextBlock Text="Copy Text"
                                          FontSize="14"
                                          FontWeight="Medium"
                                          VerticalAlignment="Center"
                                          Foreground="White"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>

            <!-- Toast Notification -->
            <Border x:Name="ToastNotification"
                    Grid.Row="1"
                    Background="#1F2937"
                    CornerRadius="20"
                    Padding="12,8"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,20,0,0"
                    Visibility="Collapsed">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="16" ShadowDepth="4" Opacity="0.2" Color="#000000"/>
                </Border.Effect>
                <StackPanel Orientation="Horizontal">
                    <Ellipse x:Name="ToastIndicator"
                            Width="8"
                            Height="8"
                            Fill="#EF4444"
                            Margin="0,0,10,0">
                        <Ellipse.RenderTransform>
                            <ScaleTransform x:Name="ToastPulseTransform"/>
                        </Ellipse.RenderTransform>
                    </Ellipse>
                    <TextBlock x:Name="ToastText"
                              Text="Recording"
                              Foreground="White"
                              FontSize="13"
                              FontWeight="Medium"
                              Margin="0,0,10,0"/>
                    <TextBlock x:Name="ToastTime"
                              Text="00:03"
                              Foreground="White"
                              FontSize="13"
                              FontFamily="Cascadia Code, Consolas, monospace"
                              Opacity="0.9"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>