<Window x:Class="SuperWhisperWPF.RecordingOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Width="480" Height="140"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen">

    <Border Background="#F5000000" CornerRadius="16" BorderBrush="#30FFFFFF" BorderThickness="1" Margin="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="8" Opacity="0.6" Color="Black"/>
        </Border.Effect>
        
        <Grid Margin="32,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Status Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" 
                        HorizontalAlignment="Center" Margin="0,0,0,12">
                <ui:FontIcon x:Name="StatusIcon" 
                           Glyph="&#xE720;" 
                           FontSize="18" 
                           Foreground="#0078D4" Margin="0,0,12,0"/>
                <TextBlock x:Name="StatusText"
                           FontSize="14" FontWeight="Medium"
                           Foreground="#FFFFFF">
                    <Run Text="ðŸŽ¤ Recording - Press " />
                    <Run Text="Ctrl+Space" FontFamily="Consolas" Background="#20FFFFFF" />
                    <Run Text=" to stop" />
                </TextBlock>
            </StackPanel>
            
            <!-- Modern Waveform Visualization -->
            <Grid Grid.Row="1" Height="50">
                <!-- Background glow effect -->
                <Ellipse x:Name="BackgroundGlow"
                         Width="120" Height="40"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#600084FF" Offset="0"/>
                            <GradientStop Color="#00000000" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                    <Ellipse.RenderTransform>
                        <ScaleTransform x:Name="GlowScale" ScaleX="1" ScaleY="1" CenterX="60" CenterY="20"/>
                    </Ellipse.RenderTransform>
                </Ellipse>

                <!-- Waveform bars -->
                <Canvas x:Name="WaveformCanvas"
                        Height="50"
                        Background="Transparent"
                        HorizontalAlignment="Center">
                    <!-- Waveform bars will be added programmatically -->
                </Canvas>
            </Grid>
        </Grid>
    </Border>
</Window>