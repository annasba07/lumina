<Window x:Class="SuperWhisperWPF.RecordingOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Width="480" Height="140"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen">

    <Border Background="#E0000000" CornerRadius="20" BorderBrush="#40FFFFFF" BorderThickness="1" Margin="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.5" Color="Black"/>
        </Border.Effect>
        
        <Grid Margin="32,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Status Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" 
                        HorizontalAlignment="Center" Margin="0,0,0,12">
                <ui:FontIcon x:Name="StatusIcon" 
                           Glyph="&#xE720;" 
                           FontSize="18" 
                           Foreground="#0078D4" Margin="0,0,12,0"/>
                <TextBlock x:Name="StatusText" 
                           Text="ðŸŽ¤ Recording - Press Ctrl+Space to stop"
                           FontSize="14" FontWeight="SemiBold"
                           Foreground="White"/>
            </StackPanel>
            
            <!-- Modern Waveform Visualization -->
            <Canvas x:Name="WaveformCanvas" 
                    Grid.Row="1" 
                    Height="50" 
                    Background="Transparent">
                
                <!-- Background glow effect -->
                <Ellipse x:Name="BackgroundGlow"
                         Width="100" Height="30"
                         Fill="#40007ACC"
                         Canvas.Left="140" Canvas.Top="10">
                    <Ellipse.RenderTransform>
                        <ScaleTransform x:Name="GlowScale" ScaleX="1" ScaleY="1"/>
                    </Ellipse.RenderTransform>
                </Ellipse>
                
                <!-- Waveform bars will be added programmatically -->
                
            </Canvas>
        </Grid>
    </Border>
</Window>